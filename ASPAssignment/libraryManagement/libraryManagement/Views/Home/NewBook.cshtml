@model Library
@{
    ViewData["Title"] = "New Book";
}
<h1>@ViewData["Title"]</h1>
<div class="container mt-5">
    <form asp-action="NewBook" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="CategoryName">Category:</label>
            <div class="col-sm-10">
                <select asp-for="CategoryName" class="form-control">
                    <option>IT</option>
                    <option>Electronics</option>
                    <option>Mechanical</option>
                    <option>Civil</option>
                    <option>Electricals</option>
                    <option>Economics</option>
                </select>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="BookName">Book:</label>
            <div class="col-sm-10">
                <input asp-for="BookName" type="text" class="form-control">
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="AuthorName">Author:</label>
            <div class="col-sm-10">
                <input asp-for="AuthorName" type="text" class="form-control">
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="PublishedYear">Published:</label>
            <div class="col-sm-10">
                <input asp-for="PublishedYear" type="text" class="form-control">
                <span asp-validation-for="PublishedYear" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Price">Price:</label>
            <div class="col-sm-10">
                <input asp-for="Price" type="text" class="form-control">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="UpdatedOn">Updated:</label>
            <div class="col-sm-10">
                <input asp-for="UpdatedOn" asp-format="dd-MM-yyyy" class="form-control">
                <span asp-validation-for="UpdatedOn" class="text-danger"></span>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
    </form>
</div>
